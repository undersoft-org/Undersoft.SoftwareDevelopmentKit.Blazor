@namespace Undersoft.SDK.Blazor.Components
@inherits AlertBase

<div @ref="MessageItemElement" @attributes="@AdditionalAttributes" role="alert" class="@ClassName" data-autohide="@AutoHideString" data-delay="@Delay">
    @if (!string.IsNullOrEmpty(Icon))
    {
        <i class="@Icon"></i>
    }
    <span>@Content</span>
    @if (ShowDismiss)
    {
        <button type="button" class="btn-close" aria-label="Close" @onclick="@OnClick"></button>
    }
</div>
