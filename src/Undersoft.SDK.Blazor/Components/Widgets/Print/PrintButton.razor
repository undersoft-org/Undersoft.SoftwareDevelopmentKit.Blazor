@namespace Undersoft.SDK.Blazor.Components
@inherits ButtonBase

<a @attributes="@AdditionalAttributes" id="@Id" target="@Target" href="@PreviewUrl" class="@ClassName" disabled="@Disabled" role="button" aria-disabled="@DisabledString" tabindex="@Tab">
    @if (!string.IsNullOrEmpty(ButtonIcon))
    {
        <i class="@ButtonIcon"></i>
    }
    @if (!string.IsNullOrEmpty(Text))
    {
        <span>@Text</span>
    }
    <CascadingValue Value="this" IsFixed="true">
        @ChildContent
    </CascadingValue>
</a>
