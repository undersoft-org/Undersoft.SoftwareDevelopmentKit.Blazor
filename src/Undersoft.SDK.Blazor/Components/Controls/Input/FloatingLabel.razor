@namespace Undersoft.SDK.Blazor.Components
@typeparam TValue
@inherits BootstrapInputBase<TValue>

<div class="form-floating">
    <input @attributes="@AdditionalAttributes" type="@Type" id="@Id" placeholder="blazor" class="@ClassName" disabled="@Disabled" @bind-value="@CurrentValueAsString" @bind-value:event="onchange" @ref="FocusElement" />
    <label for="@Id">@DisplayText</label>
</div>
